<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="MailApp">

  <!-- ===================== -->
  <!-- BASIC METADATA        -->
  <!-- ===================== -->

  <Id>ad030d55-f87e-4abf-ae0c-07aad7369fab</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Ruairi Bradley</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Outlook Privacy Assistant"/>
  <Description DefaultValue="Local, privacy-preserving email assistant (encrypted local index + local LLM)."/>

  <IconUrl DefaultValue="https://localhost:8443/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:8443/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://localhost:8443/"/>

  <!-- ===================== -->
  <!-- SECURITY / DOMAINS    -->
  <!-- ===================== -->

  <AppDomains>
    <AppDomain>localhost</AppDomain>
    <AppDomain>login.microsoftonline.com</AppDomain>
    <AppDomain>graph.microsoft.com</AppDomain>
  </AppDomains>

  <!-- ===================== -->
  <!-- HOST + REQUIREMENTS   -->
  <!-- ===================== -->

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <!-- ===================== -->
  <!-- DEFAULT FORM          -->
  <!-- ===================== -->

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:8443/"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>true</DisableEntityHighlighting>

  <!-- ===================== -->
  <!-- VERSION OVERRIDES     -->
  <!-- ===================== -->

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
    xsi:type="VersionOverridesV1_1">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- Required even if empty -->
          <FunctionFile resid="functionFile"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeCommand>
              <Id>ShowPrivacyAssistant</Id>

              <Label resid="cmdLabel"/>

              <Supertip>
                <Title resid="cmdLabel"/>
                <Description resid="cmdDesc"/>
              </Supertip>

              <Icon>
                <bt:Image size="16" resid="icon16"/>
                <bt:Image size="32" resid="icon32"/>
                <bt:Image size="80" resid="icon80"/>
              </Icon>

              <Action xsi:type="ShowTaskpane">
                <SourceLocation resid="taskpaneUrl"/>
              </Action>

            </OfficeCommand>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- ===================== -->
    <!-- RESOURCES             -->
    <!-- ===================== -->

    <Resources>

      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://localhost:8443/assets/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://localhost:8443/assets/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://localhost:8443/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://localhost:8443/"/>
        <bt:Url id="functionFile" DefaultValue="https://localhost:8443/function-file.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="cmdLabel" DefaultValue="Privacy Assistant"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="cmdDesc" DefaultValue="Open the local, privacy-first assistant sidebar."/>
      </bt:LongStrings>

    </Resources>

  </VersionOverrides>

</OfficeApp>
