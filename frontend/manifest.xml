<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <!-- Identity -->
  <Id>ad030d55-f87e-4abf-ae0c-07aad7369fab</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Ruairi Bradley</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Outlook Privacy Assistant"/>
  <Description DefaultValue="Local, privacy-preserving email assistant (encrypted local index + local LLM)."/>

  <!-- Icons (HTTPS URLs required) -->
  <IconUrl DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/assets/icon-64.png"/>

  <SupportUrl DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/"/>

  <!-- Allowed domains (HOSTNAMES, not full URLs) -->
  <AppDomains>
    <AppDomain>calm-river-0a2d7241e.1.azurestaticapps.net</AppDomain>
    <AppDomain>login.microsoftonline.com</AppDomain>
    <AppDomain>graph.microsoft.com</AppDomain>
    <AppDomain>localhost</AppDomain>
  </AppDomains>

  <!-- Outlook host -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <!-- REQUIRED by MailApp schema (even if you primarily use commands) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Minimal permission for read mode -->
  <Permissions>ReadItem</Permissions>

  <!-- Activate on Message Read -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <!-- Add-in Commands -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
                    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- Required for commands; points to a page that can load Office.js -->
          <FunctionFile resid="functionFile"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeCommand>
              <Id>ShowPrivacyAssistant</Id>

              <Label resid="cmdLabel"/>

              <Supertip>
                <Title resid="cmdLabel"/>
                <Description resid="cmdDesc"/>
              </Supertip>

              <Icon>
                <bt:Image size="16" resid="icon16"/>
                <bt:Image size="32" resid="icon32"/>
                <bt:Image size="80" resid="icon80"/>
              </Icon>

              <Action xsi:type="ShowTaskpane">
                <SourceLocation resid="taskpaneUrl"/>
              </Action>
            </OfficeCommand>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/assets/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/assets/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <!-- Taskpane URL -->
        <bt:Url id="taskpaneUrl" DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/"/>
        <!-- FunctionFile URL (can be the same page, but must load Office.js successfully) -->
        <bt:Url id="functionFile" DefaultValue="https://calm-river-0a2d7241e.1.azurestaticapps.net/"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="cmdLabel" DefaultValue="Privacy Assistant"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="cmdDesc" DefaultValue="Open the local, privacy-first assistant sidebar."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>

</OfficeApp>
